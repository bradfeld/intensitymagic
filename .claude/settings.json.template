  "enableAllProjectMcpServers": true,
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"$(date '+%Y-%m-%d %H:%M:%S'): Edited $FILE\" >> .claude/changelog.txt"
          }
        ]
      }
    ]
  }
}
